# ----------------------------------
# Google OAuth
# ----------------------------------
GOOGLE_CLIENT_ID=tu_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu_google_client_secret

# ----------------------------------
# MongoDB Configuration
# ----------------------------------
MONGO_URI=mongodb+srv://usuario:contraseña@cluster.mongodb.net/?appName=chat
DB_NAME=chat-cybersecurity
ENABLE_DB=true

# ----------------------------------
# WebSocket Server
# ----------------------------------
WS_HOST=0.0.0.0
WS_PORT=5001

# ----------------------------------
# Encryption Keys (AES-256)
# ----------------------------------
# Clave AES de 32 bytes codificada en base64
# Para generar una clave segura: python -c "import secrets, base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
AES_KEY_BASE64=MTIzNDU2Nzg5MDEyMzQ1Njc4OTAxMjM0NTY3ODkwMTI=

# Clave secreta para HMAC (al menos 32 caracteres)
HMAC_SECRET_KEY=clave_hmac_segura_muy_larga_y_aleatoria

# ----------------------------------
# Audit Log
# ----------------------------------
AUDIT_LOG_FILE=audit_log.txt
ENABLE_AUDIT=true

# ----------------------------------
# SSL/TLS Configuration
# ----------------------------------
# Habilitar SSL (true/false)
SSL_ENABLED=false

# Rutas a los certificados SSL
SSL_CERT_PATH=certs/cert.pem
SSL_KEY_PATH=certs/key.pem

# Para desarrollo, puedes generar certificados autofirmados con:
# mkdir certs
# openssl req -x509 -newkey rsa:4096 -keyout certs/key.pem -out certs/cert.pem -days 365 -nodes -subj "/CN=localhost"

# ----------------------------------
# Firma Digital
# ----------------------------------
# Certificado para firmar documentos
FIRMA_CERT_PATH=certs/firma_cert.pem
FIRMA_KEY_PATH=certs/firma_key.pem

# Carpeta de uploads
UPLOAD_FOLDER=uploads

# ----------------------------------
# Google Drive API
# ----------------------------------
# Ruta al archivo de credenciales de servicio de Google Cloud
GOOGLE_DRIVE_CREDENTIALS=credentials/google_drive_credentials.json

# ----------------------------------
# Email / SMTP
# ----------------------------------
# Configuración para envío de correos
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_correo@gmail.com
SMTP_PASSWORD=tu_contraseña_de_aplicacion

# Nombre del remitente
EMAIL_SENDER_NAME=Sistema de Firma Digital

# URL base de la aplicación (para enlaces en emails)
APP_BASE_URL=http://localhost:5000

